<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/club_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    android:layout_marginBottom="2dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:weightSum="3">
        <com.campusconnect.utility.CircularImageView
            xmlns:app="http://schemas.android.com/tools"
            android:id="@+id/group_icon_admin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_profile"
            android:layout_centerVertical="true"
            app:border_width="0dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/group_icon_admin"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Football Club"
                android:textSize="18sp"
                android:textColor="#383838"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_club_name">
                <RelativeLayout
                    android:id="@+id/members_count_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_text_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEMBERS"
                    android:paddingTop="3dp"
                    android:paddingBottom="1dp"
                    android:textSize="11sp"
                    android:textColor="#a0a0a0"/>
                <TextView
                    android:id="@+id/tv_members_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_text_members"
                    android:paddingBottom="3dp"
                    android:textSize="17sp"
                    android:textColor="#383838"/>
                </RelativeLayout>
                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/members_count_container"
                    android:layout_alignBottom="@+id/members_count_container"
                    android:layout_toRightOf="@+id/members_count_container"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#a0a0a0"/>
                <RelativeLayout
                    android:id="@+id/followers_count_container"
                    android:layout_toRightOf="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_text_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FOLLOWERS"
                        android:paddingTop="3dp"
                        android:paddingBottom="1dp"
                        android:textSize="11sp"
                        android:textColor="#a0a0a0"/>
                    <TextView
                        android:id="@+id/tv_followers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_text_followers"
                        android:paddingBottom="3dp"
                        android:textSize="17sp"
                        android:textColor="#383838"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>