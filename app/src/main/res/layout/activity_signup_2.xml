<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bk_college_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/signup_back"
            android:tint="#96000000"/>

        <ImageView
                android:id="@+id/cc_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="100dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="85dp"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cc_logo"
            android:text="Welcome to\nNational Institute of Technology Karnataka"
            android:id="@+id/tv_welcome_message" />


            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_sign_in"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_welcome_message"
                android:paddingTop="120dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp" />


    </RelativeLayout>
</ScrollView>